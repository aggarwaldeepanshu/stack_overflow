<% provide("title", "Edit Question") %>
<h1>Edit Your Question</h1>


<%= form_with model: [@question], local: true do |form| %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>
	 
	<p>
		<%= form.label :body %><br>
		<%= form.text_area :body %>
	</p>
	 
	<p>
		<%= form.submit %>
	</p> 
<% end %>
 
<%= link_to 'Back', user_path(@user) %>
<%= link_to 'Questions', questions_path %>